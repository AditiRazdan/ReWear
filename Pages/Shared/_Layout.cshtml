@using LocalBakery.Services
@inject CartService Cart
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <base href="~/" />
  <title>ReWear</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --cream: #f3f6ef;
      --ink: #1f2937;
      --accent: #3f6d4a;
      --accent-dark: #2f4f3a;
      --card: #ffffff;
      --border: #dbe6d7;
      --muted: #5f6f5f;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: Inter, system-ui, sans-serif;
      background: radial-gradient(circle at 20% 0%, #e9f3e4 0%, #f3f6ef 45%, #f6faf6 100%);
      color: var(--ink);
    }

    a {
      color: inherit;
      text-decoration: none;
      cursor: pointer;
    }

    nav {
      position: relative;
      z-index: 10;
      background: rgba(255, 255, 255, 0.9);
      border-bottom: 1px solid var(--border);
      padding: 16px 32px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      flex-wrap: wrap;
      backdrop-filter: blur(8px);
    }

    nav .brand {
      font-weight: 700;
      font-size: 18px;
      letter-spacing: 0.4px;
    }

    nav .links {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: flex-end;
      gap: 8px 12px;
      flex: 1 1 auto;
      min-width: 0;
    }

    nav .links a {
      margin-left: 0;
      font-weight: 500;
      opacity: 0.85;
    }

    nav .links a:hover {
      opacity: 1;
      text-decoration: underline;
    }

    nav .links form {
      display: inline;
      margin-left: 0;
    }

    nav .links form button {
      border: none;
      background: transparent;
      padding: 0;
      font-weight: 500;
      opacity: 0.85;
    }

    nav .links form button:hover {
      opacity: 1;
      text-decoration: underline;
    }

    main {
      position: relative;
      z-index: 1;
      max-width: 1100px;
      margin: 0 auto;
      padding: 32px;
      width: 100%;
    }

    button,
    .button {
      font-family: inherit;
      padding: 10px 16px;
      border-radius: 8px;
      border: 1px solid var(--border);
      background: var(--card);
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      line-height: 1.1;
      min-height: 40px;
      touch-action: manipulation;
      text-decoration: none;
      color: inherit;
      font-size: 15px;
      white-space: normal;
    }

    button.primary,
    .button.primary {
      background: var(--accent-dark);
      color: #fff;
      border: none;
    }

    button:hover,
    .button:hover {
      opacity: 0.9;
    }

    nav .links form button {
      border: none;
      background: transparent;
      padding: 0;
      font-weight: 500;
      opacity: 0.85;
      min-height: auto;
    }

    input, textarea, select {
      font-family: inherit;
      padding: 10px;
      border-radius: 8px;
      border: 1px solid var(--border);
      width: 100%;
    }

    input[type="checkbox"] {
      width: auto;
      margin: 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: var(--card);
      border-radius: 12px;
      overflow: hidden;
    }

    th, td {
      padding: 12px;
      border-bottom: 1px solid var(--border);
      text-align: left;
    }

    th {
      background: #edf4ea;
      font-weight: 600;
    }

    .table-item {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .page-header {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .section-header {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      gap: 16px;
      width: 100%;
    }

    .section-header > * {
      flex: 1 1 auto;
      min-width: 220px;
    }

    .section-header .inline-actions,
    .section-header form {
      justify-content: flex-end;
    }

    .muted {
      color: var(--muted);
    }

    .card-grid {
      display: grid;
      gap: 16px;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }

    .card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 16px;
      display: grid;
      gap: 10px;
      box-shadow: 0 10px 20px rgba(148, 108, 55, 0.08);
    }

    .card img {
      width: 100%;
      height: 160px;
      object-fit: cover;
      border-radius: 12px;
      background: #e6efe0;
    }

    .inline-actions {
      display: flex;
      flex-wrap: wrap;
      gap: 12px;
      align-items: center;
      width: 100%;
    }

    .inline-actions .muted {
      flex-basis: 100%;
    }

    .inline-actions > * {
      max-width: 100%;
    }

    .inline-actions form {
      max-width: 100%;
    }

    .checkout-actions {
      display: grid;
      gap: 12px;
      width: 100%;
      max-width: 100%;
    }

    .checkout-actions > * {
      width: 100%;
    }


    .cart-item {
      display: grid;
      grid-template-columns: 64px 1fr auto;
      gap: 12px;
      align-items: center;
    }

    .cart-item-actions {
      display: flex;
      gap: 16px;
      align-items: center;
      flex-wrap: wrap;
      justify-content: flex-end;
    }

    .cart-item-actions form {
      display: flex;
      gap: 10px;
      align-items: center;
      flex-wrap: wrap;
    }

    .cart-item-actions button,
    .cart-item-actions .button {
      min-width: 96px;
    }

    .cart-item-actions input[type="number"] {
      font-size: 16px;
      padding: 10px 12px;
      width: 88px;
      text-align: center;
    }

    .cart-total {
      display: flex;
      gap: 16px;
      align-items: center;
      flex-wrap: wrap;
      justify-content: flex-end;
    }



    .form-grid {
      display: grid;
      gap: 12px;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      align-items: end;
    }

    .form-card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: clamp(16px, 4vw, 20px);
      display: grid;
      gap: 16px;
      box-shadow: 0 10px 20px rgba(148, 108, 55, 0.08);
    }

    .pill {
      display: inline-flex;
      padding: 4px 10px;
      border-radius: 999px;
      background: #e6f0e0;
      color: var(--accent-dark);
      font-size: 12px;
      font-weight: 600;
      letter-spacing: 0.3px;
    }

    .table-wrap {
      width: 100%;
      overflow-x: auto;
    }

    @@media (max-width: 800px) {
      nav {
        padding: 12px 18px;
        flex-direction: column;
        align-items: flex-start;
      }

      nav .links {
        display: flex;
        flex-wrap: wrap;
        gap: 8px 12px;
        width: 100%;
        justify-content: flex-start;
      }

      nav .links a,
      nav .links form {
        margin-left: 0;
      }

      nav .links a,
      nav .links form button {
        padding: 8px 10px;
        border-radius: 8px;
        border: 1px solid var(--border);
        background: rgba(255, 255, 255, 0.9);
        font-size: 14px;
      }

      main {
        padding: 22px 18px 40px;
      }

      .section-header {
        align-items: flex-start;
      }

      .section-header > * {
        min-width: 0;
      }

      .section-header .inline-actions,
      .section-header form {
        width: 100%;
        justify-content: flex-start;
      }

      table {
        display: block;
        min-width: 520px;
        overflow-x: auto;
      }

      .responsive-table {
        min-width: 0;
        overflow: visible;
      }
    }

    @@media (max-width: 640px) {
      .form-grid {
        grid-template-columns: 1fr;
      }

      button,
      .button {
        padding: 12px 14px;
        font-size: 15px;
      }


      .inline-actions {
        flex-direction: column;
        align-items: stretch;
        justify-content: flex-start !important;
      }

      .inline-actions > * {
        width: 100%;
      }

      .inline-actions.qty-actions {
        display: grid;
        grid-template-columns: 44px 1fr 44px;
        align-items: center;
      }

      .inline-actions.qty-actions > * {
        width: auto;
      }

      .inline-actions.qty-actions .qty-input {
        width: 100%;
      }

      .inline-actions.qty-actions .primary {
        grid-column: 1 / -1;
      }

      .cart-item {
        grid-template-columns: 64px 1fr;
        align-items: start;
      }

      .cart-item-actions {
        grid-column: 1 / -1;
        justify-content: flex-start;
      }

      .cart-update {
        width: 100%;
      }

      .cart-update input[type="number"] {
        width: 100%;
      }

      .cart-item-actions {
        gap: 16px;
      }

      .cart-item-actions button,
      .cart-item-actions .button {
        width: 100%;
      }

      .cart-item-actions form {
        width: 100%;
      }

      .cart-summary {
        flex-direction: column;
        align-items: stretch;
      }

      .cart-total {
        justify-content: space-between;
      }


      .responsive-table {
        display: block;
        width: 100%;
        background: transparent;
        border: none;
        min-width: 0;
      }

      .responsive-table thead {
        display: none;
      }

      .responsive-table tbody,
      .responsive-table tr,
      .responsive-table td {
        display: block;
        width: 100%;
      }

      .responsive-table tbody tr {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 14px;
        padding: 14px;
        box-shadow: 0 10px 18px rgba(148, 108, 55, 0.08);
        margin-bottom: 14px;
      }

      .responsive-table tbody td {
        display: flex;
        justify-content: space-between;
        gap: 12px;
        padding: 8px 0;
        border-bottom: 1px dashed var(--border);
      }

      .responsive-table tbody td:last-child {
        border-bottom: none;
      }

      .responsive-table tbody td::before {
        content: attr(data-label);
        font-size: 11px;
        font-weight: 600;
        letter-spacing: 0.06em;
        text-transform: uppercase;
        color: var(--muted);
      }

      .responsive-table .table-item {
        flex-direction: column;
        align-items: flex-start;
      }

      .responsive-table .actions-cell {
        align-items: stretch;
        text-align: left;
      }

      .responsive-table .actions-cell .inline-actions {
        justify-content: flex-start;
      }
    }
  </style>
</head>

<body>
  <nav>
    <div class="brand" style="display:flex; align-items:center; gap:10px;">
      <img src="~/images/ReWearLogo.png" alt="ReWear logo" style="width:36px; height:auto;" />
      <span>ReWear</span>
    </div>
    <div class="links">
      <a href="/">Home</a>
      <a href="/Listings">Listings</a>
      @if (!User.IsInRole("Admin"))
      {
        <a href="/Cart">Reservations (@Cart.GetItemCount())</a>
      }
      @if (User.Identity?.IsAuthenticated == true)
      {
        if (User.IsInRole("Admin"))
        {
          <a href="/Admin/Listings">Manage Listings</a>
          <a href="/Admin/Dashboard">Dashboard</a>
          <form method="post" asp-page="/Admin/Logout" style="display:inline;">
            <button type="submit">Log out</button>
          </form>
        }
        else
        {
          <a href="/Account/Orders">My Reservations</a>
          <form method="post" asp-page="/Account/Logout" style="display:inline;">
            <button type="submit">Log out</button>
          </form>
        }
      }
      else
      {
        <a href="/Account/Login">Log in</a>
        <a href="/Account/Register">Create Account</a>
        <a href="/Admin/Login">Admin Login</a>
      }
    </div>
  </nav>

  <main>
    @RenderBody()
  </main>

  <script src="~/js/site.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
