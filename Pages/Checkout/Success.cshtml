@page
@model LocalBakery.Pages.Checkout.SuccessModel
@{
  ViewData["Title"] = "Reservation Confirmed";
}

<section style="display:grid; gap:16px; text-align:center; padding:40px 20px;">
  <h1 style="margin:0;">Reservation Confirmed</h1>
  <p class="muted" style="margin:0;">Thanks for reserving! Your reservation number is:</p>
  <div style="font-size:28px; font-weight:700;">@Model.OrderNumber</div>
  @if (Model.PickupTimeUtc.HasValue)
  {
    <div class="muted" style="margin:0;">Pickup window: @TimeHelper.ToSgt(Model.PickupTimeUtc.Value).ToString("MMM d, h:mm tt")</div>
  }
  <div><a href="/Receipt?order=@Model.OrderNumber">View Reservation</a></div>
  <a class="button primary" href="/Listings">Continue Browsing</a>
</section>
