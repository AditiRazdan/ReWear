@page
@model LocalBakery.Pages.Account.RegisterModel
@{
  ViewData["Title"] = "Create Account";
}

<section style="display:grid; gap:20px; max-width:480px; margin:0 auto;">
  <header class="page-header">
    <h1 style="margin:0;">Create Account</h1>
    <p class="muted" style="margin:0;">Save your orders and track pickup details.</p>
  </header>

  <form method="post" class="form-card">
    <div asp-validation-summary="All" class="muted" style="font-size:13px;"></div>
    <label style="display:grid; gap:6px;">
      <span class="muted" style="font-size:13px;">Username</span>
      <input asp-for="UserName" autocomplete="username" />
    </label>
    <label style="display:grid; gap:6px;">
      <span class="muted" style="font-size:13px;">Password</span>
      <input asp-for="Password" type="password" autocomplete="new-password" />
    </label>
    <input type="hidden" asp-for="ReturnUrl" />
    <button class="primary" type="submit">Create account</button>
  </form>

  <div class="muted" style="font-size:13px;">
    Already have an account? <a href="/Account/Login">Log in</a>.
  </div>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
